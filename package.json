{
  "name": "hono-filebased-route",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "description": "A core utility for file-based routing in Hono applications.",
  "author": "HM Suiji <hmsuiji@gmail.com>",
  "keywords": [
    "hono",
    "router",
    "file-based",
    "routing",
    "backend",
    "framework",
    "typescript",
    "file-based-routing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HM-Suiji/hono-filebased-route.git"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test:bun": "cd examples/bun && bun dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "bun run scripts/vercel-deploy.ts",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.6",
    "dayjs": "^1.11.13",
    "hono": "^4.9.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "tsc": "^2.0.4",
    "vitepress-markdown-timeline": "^1.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/bun": "^1.2.20",
    "@types/pino": "^7.0.5",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "markdown-it-mathjax3": "^4.3.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vitepress": "^2.0.0-alpha.12"
  },
  "packageManager": "bun@1.2.20"
}